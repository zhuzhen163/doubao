<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBg"
    >

    <LinearLayout
        android:id="@+id/ll_net_connect"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen35dp">
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen15dp"
                android:drawableLeft="@drawable/app_loading0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30天无忧退货"/>
            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/app_loading0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48小时快速退款"/>
            <TextView
                android:layout_marginRight="@dimen/dimen15dp"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/app_loading0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免邮费"/>
        </LinearLayout>

        <com.qzxq.shop.widget.xrecyclerview.XRecyclerView
            android:layout_weight="1"
            android:id="@+id/xrv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/ll_shop"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen50dp">

            <CheckBox
                android:padding="@dimen/dimen10dp"
                android:id="@+id/cb_select"
                android:background="@drawable/checkbox_unselected"
                android:checked="false"
                android:layout_marginLeft="@dimen/dimen15dp"
                android:layout_width="@dimen/dimen40dp"
                android:layout_height="@dimen/dimen40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选（0）"/>
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/tv_editor"
                android:layout_marginRight="@dimen/dimen10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"/>

            <TextView
                android:id="@+id/tv_buy"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/colorTheme"
                android:layout_width="@dimen/dimen100dp"
                android:layout_height="@dimen/dimen50dp"
                android:text="去结算"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_delete"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen50dp">

            <CheckBox
                android:padding="@dimen/dimen10dp"
                android:id="@+id/cb_select_delete"
                android:background="@drawable/checkbox_unselected"
                android:checked="false"
                android:layout_marginLeft="@dimen/dimen15dp"
                android:layout_width="@dimen/dimen40dp"
                android:layout_height="@dimen/dimen40dp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全选（0）"/>

            <TextView
                android:id="@+id/tv_complete"
                android:layout_marginRight="@dimen/dimen10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"/>

            <TextView
                android:id="@+id/tv_Delete"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/colorTheme"
                android:layout_width="@dimen/dimen100dp"
                android:layout_height="@dimen/dimen50dp"
                android:text="删除所选"/>
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:id="@+id/iv_none"
        android:src="@mipmap/ic_launcher"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
