<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPageBg"
    >

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_noAddress"
        android:background="@color/white"
        android:paddingRight="@dimen/dimen15dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen80dp">
        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/dimen13dp"
            android:text="您还没有收货地址，去添加"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_checkAddress"
        android:background="@color/white"
        android:paddingRight="@dimen/dimen15dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen80dp">
        <TextView
            android:textSize="@dimen/dimen15dp"
            android:text="姓名"
            android:id="@+id/tv_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dimen20dp"
            android:layout_width="@dimen/dimen60dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dimen5dp"
            android:id="@+id/tv_phone"
            android:text="电话"
            android:textSize="@dimen/dimen15dp"
            android:layout_alignTop="@id/tv_name"
            android:layout_toRightOf="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_default_pic"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_below="@id/tv_name"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/dimen30dp"
            android:layout_height="@dimen/dimen15dp" />

        <TextView
            android:id="@+id/tv_address"
            android:singleLine="true"
            android:text="地址"
            android:textSize="@dimen/dimen14dp"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_alignLeft="@id/tv_phone"
            android:layout_below="@id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen20dp"/>

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_checkCoupon"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择优惠券"/>
        <TextView
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台抵扣券"/>
        <TextView
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品合计"/>
        <TextView
            android:id="@+id/tv_shopTotal"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"/>
        <TextView
            android:id="@+id/tv_freight"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"/>
        <TextView
            android:id="@+id/tv_couponPrice"
            android:layout_marginLeft="@dimen/dimen10dp"
            android:layout_marginRight="@dimen/dimen15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen10dp"
        android:background="@color/colorPageBg"/>
</LinearLayout>