<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBg"
    android:orientation="vertical"
    >
    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:textSize="@dimen/dimen15dp"
            android:textColor="@color/color_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定账号"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_headImage"
            android:layout_width="@dimen/dimen35dp"
            android:layout_height="@dimen/dimen35dp"
            android:src="@mipmap/logo"
            android:layout_marginRight="@dimen/dimen15dp"
            app:civ_border_color="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen10dp"
        android:id="@+id/ll_addressManager"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:textSize="@dimen/dimen15dp"
            android:textColor="@color/color_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"/>
        <TextView
            android:id="@+id/tv_authName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去认证"
            android:textSize="@dimen/dimen15dp"
            android:textColor="#4f646a"
            android:layout_marginRight="@dimen/dimen15dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"/>

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen15dp"
            android:textSize="@dimen/dimen15dp"
            android:textColor="@color/color_33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证件号"/>
        <TextView
            android:id="@+id/tv_authIdNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去认证"
            android:textSize="@dimen/dimen15dp"
            android:textColor="#4f646a"
            android:layout_marginRight="@dimen/dimen15dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_logout"
        android:layout_marginRight="@dimen/dimen15dp"
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_marginBottom="@dimen/dimen20dp"
        android:background="@drawable/button_background_logout"
        android:gravity="center"
        android:textColor="@color/color_33"
        android:textSize="@dimen/dimen16dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen44dp"
        android:text="退出登录"/>

</LinearLayout>