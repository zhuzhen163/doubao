<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_transition"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:paddingRight="@dimen/dimen15dp"
        android:paddingLeft="@dimen/dimen15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen80dp">
        <TextView
            android:textSize="@dimen/dimen15dp"
            android:text="姓名"
            android:id="@+id/tv_name"
            android:maxLength="5"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dimen20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/dimen10dp"
            android:id="@+id/tv_phone"
            android:text="电话"
            android:textSize="@dimen/dimen15dp"
            android:layout_alignTop="@id/tv_name"
            android:layout_toRightOf="@id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_default_pic"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_below="@id/tv_name"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/dimen30dp"
            android:layout_height="@dimen/dimen15dp" />

        <TextView
            android:id="@+id/tv_address"
            android:singleLine="true"
            android:text="地址"
            android:textSize="@dimen/dimen14dp"
            android:layout_marginTop="@dimen/dimen5dp"
            android:layout_alignLeft="@id/tv_phone"
            android:layout_below="@id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginRight="@dimen/dimen20dp"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/dimen15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"
        />
</LinearLayout>